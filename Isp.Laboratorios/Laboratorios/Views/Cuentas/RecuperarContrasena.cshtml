@{
    Layout = "~/Views/Shared/_LayoutOffline.cshtml";
    ViewBag.Title = "Recuperar Contraseña";
}

@using (Html.BeginForm("RecuperarContrasena", "Cuentas", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin", role = "form" }))
{    <div class="col-md-offset-3 col-md-6 col-md-offset-3">
        <div class="col-md-offset-1 col-md-10 col-md-offset-1">
            <div class="jumbotron">
                @Html.AntiForgeryToken()
                <h3>Recuperar Contraseña</h3>
                <div class="form-group">
                    @Html.TextBox("correo", null, new { @class = "form-control", placeholder = "Correo electrónico", required = "required", type = "email" })<br />
                    <input type="submit" value="Recuperar Contraseña" class="btn btn-lg btn-primary btn-block" />
                </div>
            </div>
        </div>
    </div>
}

