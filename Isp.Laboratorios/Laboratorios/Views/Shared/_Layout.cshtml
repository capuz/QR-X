@using Isp.Laboratorios.Infrastructure
@using Isp.Laboratorios.Infrastructure.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/javascript")
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/js-datepicker")
    @Styles.Render("~/bundles/css-datepicker")
    @RenderSection("Scripts", false)
</head>
<body>
    <div class="container box-shadow--6dp">
        <div id="header">
            <nav class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <img src="~/Content/Img/logo.jpg">
                    </div>
                    <h2>&nbsp;&nbsp;@ApplicationInfo.NombreSistema</h2>
                    @Html.Action("DesplegarMenu", "Cuentas")
                </div>
                @Html.Breadcrumbs()
            </nav>
        </div>
        <div id="alertContainer">
            @{ Html.RenderPartial("_Alerts"); }
        </div>
        <div id="mainContainer">
            @RenderBody()
        </div>
    </div>
    <div class="modal fade" id="modalContainer" tabindex="-1" role="dialog" aria-hidden="true">
    </div>
    <footer>
        <div class="container">
            <p class="text-muted">
                <img src="~/Content/Img/logo-pie.jpg" />
                &nbsp;&nbsp;© @DateTime.Now.Year - Instituto de Salud Pública de Chile, ISPCH.
            </p>
        </div>
    </footer>
</body>
</html>
