<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">
  <targets>
    <target type="WebService"
            name="ws"
            url="http://webApiDomqa/api/Log/PostLog"
            protocol="HttpPost"
            encoding="UTF-8">
      <parameter name="TipoAuditoria" layout="${gdc:TipoAuditoria}"/>
      <parameter name="Pagina" layout="${aspnet-request:serverVariable=HTTP_URL}${aspnet-request:queryString}"/>
      <parameter name="Evento" layout="${callsite:className=false:includeSourcePath=false:methodName=true}"/>
      <parameter name="Clase" layout="${callsite:className=true:includeSourcePath=false:methodName=false}"/>
      <parameter name="Cabecera" layout="${message}${onexception:EXCEPTION\: ${exception:format=ToString}}" />
      <parameter name="Mensaje" layout="${message}"/>
      <parameter name="Ip" layout="${aspnet-request:serverVariable=remote_addr}"/>
      <parameter name="Browser" layout="${aspnet-request:item=HTTP_USER_AGENT}"/>
      <parameter name="Fecha" layout="${date}" />
      <parameter name="Usuario" layout="${aspnet-session:Variable=usuario.Usuario:EvaluateAsNestedProperties=true}"/>
    </target>
    <target xsi:type="File" name="InfoFile" fileName="${basedir}/log/${shortdate}.log" layout="${longdate} ${uppercase:${level}} ${message}" />
    <target xsi:type="File" name="FatalFile" fileName="${basedir}/log/${shortdate}_Error.log" layout="${longdate} ${uppercase:${level}} ${message}" />
  </targets>
  <rules>
    <logger name="*" writeTo="ws"></logger>
    <logger name="*" minlevel="Debug" writeTo="InfoFile" />
    <logger name="*" minlevel="Info" writeTo="InfoFile" />
    <logger name="*" minlevel="Fatal" writeTo="FatalFile" />
  </rules>
</nlog>