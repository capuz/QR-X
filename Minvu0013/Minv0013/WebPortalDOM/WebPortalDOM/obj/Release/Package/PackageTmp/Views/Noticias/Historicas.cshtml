@using Framework.Core;
@using WebPortalDOM.Models.DTO;
@using NonFactors.Mvc.Grid;
@model IEnumerable<Noticia>
<div class="row"></div>

@if (Model != null) {
@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.Titular).Titled("").RenderedAs(m => Html.ActionLink(m.Titular, "Detalle",
       new { id = m.IdNoticia }));

    })
    .Sortable()
    .Pageable(pager =>
    {
        pager.RowsPerPage = ConfigWrapper.Value<int>("Paging");
    })
)
}