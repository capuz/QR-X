@using WebPortalDOM.Models.DTO

@model IEnumerable<ContenidoPrincipal>
<div id="carousel-portal-dom" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Content/Img/carousel/slide1.jpg" />
        </div>
        <div class="item">
            <img src="~/Content/Img/carousel/slide2.jpg" />
        </div>
        <div class="item">
            <img src="~/Content/Img/carousel/slide3.jpg" />
        </div>
        <div class="item">
            <img src="~/Content/Img/carousel/slide4.jpg" />
        </div>
        <div>
            <div class="carousel-caption">
                <div class="row">

                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <div class="col-xs-@item.NumColXs col-sm-@item.NumCol col-md-@item.NumCol col-lg-@item.NumCol padding-box-item-principal">
                                <div class="box-item-principal">
                                    <a href="@item.Url" title="@item.Nombre">
                                        <div class="row">
                                            <div class="col-xs-12 col-md-12 col-lg-12">
                                                @if (!string.IsNullOrEmpty(@item.Icono))
                                                {
                                                    <img src="@item.Icono" class="img-responsive center-block" alt="@item.Descripcion" />
                                                }
                                            </div>
                                        </div>
                                        <div class="row text-center">
                                            <div class="col-xs-12 col-md-12 col-lg-12">
                                                @item.Nombre
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>

                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>