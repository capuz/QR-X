@model System.Web.Mvc.HandleErrorInfo
@using WebPortalDOM.Resources
@{
    ViewBag.Title = "Error";
}
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center text-danger">Error</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h3 class="text-center text-danger">
                    @if (Model != null)
                    {
                        @Model.Exception.Message
                    }
                    else
                    {
                        var errorMessage = string.IsNullOrEmpty(ViewBag.error)
                             ? ErrorMessageResources.GenericError
                             : ViewBag.error;
                        @errorMessage
                    }
                </h3>
                <div class="text-center">@Html.ActionLink("Volver al inicio", "Index", "Home", null, null)</div>
            </div>
        </div>
    </div>
</div>
