@using WebPortalDOM.Models.DTO
@using NonFactors.Mvc.Grid;
@model IEnumerable<Noticia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <h2 id="encabezados" class="titles-site">Noticias</h2>
    </div>
</div>
@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <hr class="separador" />
            </div>
        </div>
        <div class="row margen">
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                <img src="@item.Imagen" class="img-responsive" />
            </div>
            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <b> @Html.ActionLink(@item.Titular, "Detalle", new { id = @item.IdNoticia })</b>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <small>@string.Format("{0:dd MMMM yyyy}", @item.FechaPublicacion)</small>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="text-justify">@item.Bajada</div>
                    </div>
                </div>
            </div>
        </div>}
}else
{
    <div class="text-danger text-center">@WebPortalDOM.Resources.ErrorMessageResources.NoContentNotice</div>
}
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <hr class="separador" />
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        @Html.Action("Historicas", "Noticias")
        @*@Html.AjaxGrid(Url.Action("Historicas"))*@
    </div>
</div>
