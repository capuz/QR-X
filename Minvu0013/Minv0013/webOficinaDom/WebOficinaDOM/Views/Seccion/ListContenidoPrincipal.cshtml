@using WebOficinaDOM.Models.DTO
@using GridMvc.Html
@using Framework.Core
@model IEnumerable<ContenidoPrincipal>


    @Html.Grid(Model).Columns(columns =>
    {
        columns.Add(m => m.Nombre).Filterable(true);
        columns.Add(m => m.Icono);
        columns.Add(m => m.Url).Titled("URL").Css("truncate-cell");
        columns.Add(m => m.ActivoString).Titled("Estado").Css("col-md-2");
        columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(1)
        .RenderValueAs(model =>

            Html.ActionLink(" ", "EditContenidoPrincipal", "Seccion",
                new { id = model.IdContenidoPrincipal },
                new { @class = "glyphicon glyphicon-edit prevent-default edit-action-1", title = "Editar" })
                .ToHtmlString() + "&nbsp;&nbsp;" +
            Html.ActionLink(" ", "DeleteContenidoPrincipal", "Seccion",
                new { id = model.IdContenidoPrincipal },
                new { @class = "glyphicon glyphicon-remove prevent-default delete-action-1", title = "Eliminar" }).
                ToHtmlString())
        .Titled("Acciones");

    }).Sortable(true).WithPaging(ConfigWrapper.Value<int>("Paging"))



