@model IEnumerable<WebOficinaDOM.Models.DTO.Noticia>

@using GridMvc.Html


@Html.Grid(Model).AutoGenerateColumns().Columns(columns => {
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(20)
        .RenderValueAs(model => model.FechaPublicacion == null ? 
            model.Activo == true ? 
            Html.ActionLink(" ", "Edit", "Noticia", 
                new { id = model.IdNoticia },
                new { @class = "glyphicon glyphicon-edit prevent-default edit-action", title = "Editar" })
                .ToHtmlString() + " " +
            Html.ActionLink(" ", "Publish", "Noticia", 
                new { id = model.IdNoticia },
                new { @class = "glyphicon glyphicon-bullhorn prevent-default publish-action", title = "Publicar" })
                .ToHtmlString()+" "+
             Html.ActionLink(" ", "Delete", "Noticia",
                        new { id = model.IdNoticia },
                        new { @class = "glyphicon glyphicon-remove prevent-default delete-action", title = "Desactivar" }).
                ToHtmlString()
                    :
                  Html.ActionLink(" ", "Edit", "Noticia",
                new { id = model.IdNoticia },
                new { @class = "glyphicon glyphicon-edit prevent-default edit-action", title = "Editar" })
                .ToHtmlString() + " " +
            Html.ActionLink(" ", "Publish", "Noticia",
                new { id = model.IdNoticia },
                new { @class = "glyphicon glyphicon-bullhorn prevent-default publish-action", title = "Publicar" })
                .ToHtmlString()
                
                :
                
             model.Activo == true ?     
            Html.ActionLink(" ", "Edit", "Noticia", 
                new { id = model.IdNoticia },
                new { @class = "glyphicon glyphicon-edit prevent-default edit-action", title = "Editar" })
                .ToHtmlString() + " " +
             Html.ActionLink(" ", "Delete", "Noticia",
                        new { id = model.IdNoticia },
                        new { @class = "glyphicon glyphicon-remove prevent-default delete-action", title = "Desactivar" }).
                ToHtmlString()
                :

                Html.ActionLink(" ", "Edit", "Noticia",
                new { id = model.IdNoticia },
                new { @class = "glyphicon glyphicon-edit prevent-default edit-action", title = "Editar" })
                .ToHtmlString())
        .Titled("Acciones");

})


