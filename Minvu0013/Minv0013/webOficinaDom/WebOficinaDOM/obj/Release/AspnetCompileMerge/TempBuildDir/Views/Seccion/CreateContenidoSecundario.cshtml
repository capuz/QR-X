@model WebOficinaDOM.Models.DTO.ContenidoSecundario

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Crear Contenido Secundario</h4>
</div>
<div class="modal-body">
    @using (Html.BeginForm("CreateContenidoSecundario", "Seccion", FormMethod.Post, new { Id = "CreateContenidoSecundarioForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

    <div class="form-horizontal">
        <div class="form-group required">
            @Html.LabelFor(model => model.Url, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Url, new { @class = "form-control countChar", placeholder = "Dirección WEB" })
                @Html.ValidationMessageFor(model => model.Url, null, new { @class = "text-danger" })
                <div class="pull-right" id="ccUrl">
                    @{
        var lengthUrl = Model.IsNull() || Model.Url.IsNull() ? default(int) : Model.Url.Length;
        var textoUrl = string.Format("{0} caracteres de {1} máximo", lengthUrl, 256);
                    }
                    @textoUrl
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Activo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.Activo)
            </div>
        </div>
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
    </div>
    }
</div>
<div class="modal-footer">
    <div class="row">
        <div class="col-md-6">
            <div class="pull-left">
                @Html.Label("*", new { style = "color:red" }) @Html.Label("Campo obligatorio", new { @class = "small" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="pull-right">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" id="btnCreateNewContenidoSecundario" class="btn btn-primary prevent-default">Guardar</button>
            </div>
        </div>
    </div>
</div>


