@model WebOficinaDOM.Models.DTO.ContenidoLogo

@using (Html.BeginForm("LogoDom", "Seccion", FormMethod.Post, new { enctype = "multipart/form-data", Id = "LogoDomForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="panel panel-default">
        <div class="panel-body">
            <h4 class="title-form">Logo DOM</h4>
            <div class="form-group form-inline">
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.File, new { type = "file", id = "fileLogoDom", @class = "filestyle", data_buttonname = "btn-primary", data_buttontext = "Examinar", data_placeholder = "Ruta archivo" })
                    <button type="button" id="btnEditLogoDOM" class="btn btn-primary prevent-default">Actualizar Logo</button>
                    <div class="form-group">
                        @Html.ValidationMessageFor(m => m.File, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <small class="text-info">Previsualización</small>
                    <img id="ImageLogoDom" class="img-responsive" src="@ViewBag.uriLogo" />
                </div>
            </div>
        </div>
    </div>

}